<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clock_face"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <GridLayout
        android:id="@+id/clock_wedges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/top_left_wedge"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:backgroundTint="@null"
            android:background="@drawable/ic_newclockfacetopleft" />

        <ImageView
            android:id="@+id/top_right_wedge"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:backgroundTint="@null"
            android:src="@drawable/ic_newclockfacetopright"/>

        <ImageView
            android:id="@+id/bottom_left_wedge"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:backgroundTint="@null"
            android:src="@drawable/ic_newclockfacebottomleft"/>

        <ImageView
            android:id="@+id/bottom_right_wedge"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:backgroundTint="@null"
            android:src="@drawable/ic_newclockfacebottomright" />

    </GridLayout>

    <ImageView
        android:id="@+id/clock_ticks_numbers"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:src="@drawable/ic_newclockface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>